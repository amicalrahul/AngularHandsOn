@model IEnumerable<SchoolModel>
@{
    ViewData["Title"] = "Schools List";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Principal)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.FirstOrDefault().Date) Created
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor((m) => item.Name)
            </td>
            <td>
                @Html.DisplayFor((m) => item.Principal)
            </td>
            <td>
                @Html.DisplayFor((m) => item.Date)
            </td>
        </tr>
    }

</table>
