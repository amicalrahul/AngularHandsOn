@{
    ViewBag.Title = "Angular Page";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"> </script>
<script src="~/lib/angular-route/angular-route.min.js"></script>
<script src="~/lib/angular-cookies/angular-cookies.min.js"></script>
<script src="~/js/app/app.js"></script>
<script src="~/js/app/books/BooksController.js"></script>
<script src="~/js/app/services/dataService.js"></script>
<script src="~/js/app/services/loggerService.js"></script>
<script src="~/js/app/services/constantService.js"></script>
<script src="~/js/app/services/badgeService.js"></script>
}
<div class="row" ng-app="app">

    <div ng-controller="BooksController as books">
        <h1>Hello {{ books.appName }}!</h1>
        <h3>All Books</h3>
        <div>
            <ul>
                <li ng-repeat="book in books.allBooks">{{ book.title }} - {{ book.author }}</li>
            </ul>
        </div>
        <h3>All Readers</h3>
        <div>
            <ul>
                <li ng-repeat="reader in books.allReaders">{{ reader.name }} - {{ books.getBadge(reader.totalMinutesRead) }}</li>
            </ul>
        </div>
    </div>
</div>
